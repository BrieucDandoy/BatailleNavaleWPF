<Window x:Class="WpfApp1.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:WpfApp1"
        mc:Ignorable="d"
        Title="Bataille Navale" Height="800" Width="800"
        Background="Beige">
    <Border Padding="10">
        <StackPanel VerticalAlignment="center" x:Name="stackPanelMain">
            <Label x:Name ="LabelInstruction" Content="Positionnnez vos bateau"/>

            <StackPanel HorizontalAlignment="Center">
                <Grid x:Name="grille" Margin="115 100 115 0">
            </Grid>
            
            
            <Grid x:Name="GrilleBoat" Margin="0 0 0 0">
            </Grid>
            </StackPanel>
            
            
            
            <Button x:Name="NewBoat" Content="Nouveau Bateau"/>
            <Button x:Name="ValidateBoat" Content="Valider le bateau"/>
            <Button x:Name="VertHor" Content="VerticalAlignment Background horizontal"/>
        </StackPanel>
    </Border>
</Window>
